<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="#6699CC">
    <include layout="@layout/head_more"/>
    <LinearLayout android:layout_width="300dp"
                  android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="40dp"
                android:text="个人中心"
                android:textSize="31dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"/>
        <ImageView android:layout_width="150dp" android:layout_height="150dp"
                android:background="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:id="@+id/iv_head_image"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="张三"
                android:textSize="30dp"
                android:id="@+id/tv_username"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="ID1234"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_user_id"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="本月接单数"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="20"
                        android:id="@+id/tv_receive_count"
                        android:layout_marginTop="20dp"
                        android:textSize="40dp"
                        android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="本月销单数"
                          android:textColor="@android:color/white"
                          android:textSize="15dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="4"
                          android:id="@+id/tv_drop_count"
                          android:layout_marginTop="20dp"
                          android:textSize="40dp"
                          android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="本月好评数"
                          android:textColor="@android:color/white"
                          android:textSize="15dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="15"
                          android:id="@+id/tv_admire_count"
                          android:layout_marginTop="20dp"
                          android:textSize="40dp"
                          android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView android:layout_width="match_parent" android:layout_height="60dp"
                android:background="@drawable/bg_receive"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="订单数量:50"
                android:id="@+id/tv_order_count"
                android:textColor="@android:color/white"/>
        <Button android:layout_width="150dp" android:layout_height="50dp"
                android:text="开始接单"
                android:background="#FFCC00"
                android:id="@+id/btn_start_work"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>