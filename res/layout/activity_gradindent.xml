<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />
    <include layout="@layout/head_more_me"
        android:id="@+id/view_head"/>
    <TextView android:layout_width="match_parent" android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:layout_below="@id/view_head"
            android:text="北京Ｖ"
            android:textSize="27dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_location"
            android:background="#88ffffff"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        <Button android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="任务"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="开始"
                android:id="@+id/btn_start"
                />
        <Button android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="工作台"/>

    </LinearLayout>
</RelativeLayout>